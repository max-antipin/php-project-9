{% extends "main.html.twig" %}

{% block content %}
<h1>Сайты</h1>
<div class="table-responsive">
    <table class="table table-bordered table-hover text-nowrap" data-test="urls">
        <thead>
            <tr>
                <th>ID</th>
                <th>Имя</th>
                <th>Последняя проверка</th>
                <th>Код ответа</th>
            </tr>
        </thead>
        <tbody>
            {% for url in urls %}
            <tr>
            <td>{{ url.id }}</td>
            <td><a href="{{ url.href }}">{{ url.name }}</a></td>
            <td>{{ url.last }}</td>
            <td>{{ url.status_code }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}